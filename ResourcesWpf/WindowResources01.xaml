<Window x:Class="ResourcesWpf.WindowResources01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesWpf"
        mc:Ignorable="d"
        Title="WindowResources01" Height="450" Width="800" Background="white">
    <!--Page Level Resources meanse apply setting for current page-->
    <Window.Resources>
        <SolidColorBrush x:Key="MyColor01" Color="Blue"></SolidColorBrush>
        <SolidColorBrush x:Key="MyColor02" Color="Wheat"></SolidColorBrush>
    </Window.Resources>
    <StackPanel Margin="10px">
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Background="{StaticResource MyColor01}" 
                Foreground="{StaticResource MyColor02}"></Button>
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Foreground="{StaticResource MyColor01}" 
                Background="{StaticResource MyColor02}"></Button>
    </StackPanel>
</Window>
