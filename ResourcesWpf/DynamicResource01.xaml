<Window x:Class="ResourcesWpf.DynamicResource01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesWpf"
        mc:Ignorable="d"
        Title="DynamicResource01" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <Button x:Name="btn1" Content="button" Margin="0,10,0,0" Background="{StaticResource MyColor03}"></Button>
        <Button x:Name="btn2" Content="button" Margin="0,10,0,0" Background="{DynamicResource MyColor03}"></Button>
        <Button x:Name="btn3" Content="button" Margin="0,10,0,0" Click="Button_Click"></Button>
    </StackPanel>
    
</Window>
