<Window x:Class="ResourcesWpf.WindowResources03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesWpf"
        mc:Ignorable="d"
        Title="WindowResources03" Height="450" Width="800">
    <StackPanel Margin="10px">
        <!--Control Level Resources meanse apply setting for current control-->
        <StackPanel.Resources>
            <SolidColorBrush x:Key="MyColor01" Color="yellow"></SolidColorBrush>
            <SolidColorBrush x:Key="MyColor02" Color="green"></SolidColorBrush>
        </StackPanel.Resources>
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Background="{StaticResource MyColor01}" 
                Foreground="{StaticResource MyColor02}"></Button>
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Foreground="{StaticResource MyColor01}" 
                Background="{StaticResource MyColor02}"></Button>
    </StackPanel>
</Window>
