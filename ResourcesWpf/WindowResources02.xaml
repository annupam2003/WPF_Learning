<Window x:Class="ResourcesWpf.WindowResources02"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesWpf"
        mc:Ignorable="d"
        Title="WindowResources02" Height="450" Width="800">
   
    <StackPanel Margin="10px">
        <!--Application Level Resources meanse apply setting for current Application-->
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Background="{StaticResource MyColor01}" 
                Foreground="{StaticResource MyColor02}"></Button>
        <Button Content="My Button" 
                Width="100" 
                Height="40" 
                Foreground="{StaticResource MyColor01}"
                Background="{StaticResource MyColor02}"></Button>
    </StackPanel>
</Window>
