<Window x:Class="BasicTriggers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicTriggers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="200">Property Trigger</TextBlock>
            <Button x:Name="btnPropertyTrigger" Content="Property trigger" Click="btnPropertyTrigger_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="200">Data Trigger</TextBlock>
            <Button x:Name="btnDataTrigger" Content="Data trigger" Click="btnDataTrigger_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="200">Data Trigger</TextBlock>
            <Button x:Name="btnMulitDataTrigger" Content="Multi Data trigger" Click="btnMulitDataTrigger_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="200">Data Trigger</TextBlock>
            <Button x:Name="btnEventTrigger" Content="Event Trigger" Click="btnEventTrigger_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
