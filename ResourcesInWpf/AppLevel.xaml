<Window x:Class="ResourcesInWpf.AppLevel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesInWpf"
        mc:Ignorable="d"
        Title="{StaticResource MyName}" Height="450" Width="800">
    <StackPanel>
        <TextBox Height="30" Width="500" HorizontalAlignment="Center">Application Level Resources Use</TextBox>
        <TextBox Height="30" Width="500" Background="{StaticResource ResourceKey=myColor}" HorizontalAlignment="Center">Application Level Static Resources Use</TextBox>
        <TextBox Height="30" Width="500" Background="{DynamicResource myColor}" HorizontalAlignment="Center">Application Level Dynamic Resources Use</TextBox>
        <Button x:Name="btn" Width="200" Content="Dynamic Resource" Click="btn_Click"/>
    </StackPanel>
</Window>
