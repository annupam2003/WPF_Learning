<Window x:Class="ResourcesInWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesInWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="300" Content="Application Level Resource"></Label>
            <Button Content="Example One" Click="Button_Click" Margin="100,1,1,1"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="300" Content="Page Level Resource"></Label>
            <Button Content="Example Two" Click="Button_Click02" Margin="100,1,1,1"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="300" Content="Control Level Resource"></Label>
            <Button Content="Example Three" Click="Button_Click03" Margin="100,1,1,1"></Button>
        </StackPanel>
    </StackPanel>
</Window>
